<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!-- Execute all the test having group smoke or completed classes -->

<suite name="SmokeTest">
    <groups>
        <run>
            <include name="Smoke"/>
            <include name="completed"/>
        </run>
    </groups>
    <test name="Login Related Testcases">
        <classes>
            <class name="com.automation.testng.LoginTest"></class>
            <class name="com.automation.testng.HomeTest"></class>
            <class name="com.automation.testng.ProfileTest"></class>
        </classes>
    </test>
</suite>